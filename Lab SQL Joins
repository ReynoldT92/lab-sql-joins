USE sakila;
SELECT 
    c.name AS category,
    COUNT(fc.film_id) AS film_count
FROM category AS c
JOIN film_category AS fc
    ON c.category_id = fc.category_id
GROUP BY 
    c.category_id,
    c.name
ORDER BY 
    c.name;
    
    
-- Store Id , City and country for each store
SELECT 
    s.store_id,
    ci.city,
    co.country
FROM store AS s
JOIN address AS a
    ON s.address_id = a.address_id
JOIN city AS ci
    ON a.city_id = ci.city_id
JOIN country AS co
    ON ci.country_id = co.country_id
ORDER BY 
    s.store_id;


-- 3. Total revenue generated by each store (in dollars)
SELECT
    s.store_id,
    SUM(p.amount) AS total_revenue
FROM store AS s
JOIN staff AS st
    ON s.store_id = st.store_id
JOIN payment AS p
    ON st.staff_id = p.staff_id
GROUP BY
    s.store_id
ORDER BY
    s.store_id;

-- 4. Average running time of films for each category
SELECT
    c.name AS category,
    ROUND(AVG(f.length), 2) AS avg_film_length
FROM category AS c
JOIN film_category AS fc
    ON c.category_id = fc.category_id
JOIN film AS f
    ON fc.film_id = f.film_id
GROUP BY
    c.category_id,
    c.name
ORDER BY
    c.name;

-- 5. Categories with the longest average running time (bonus)
SELECT
    c.name AS category,
    ROUND(AVG(f.length), 2) AS avg_film_length
FROM category AS c
JOIN film_category AS fc
    ON c.category_id = fc.category_id
JOIN film AS f
    ON fc.film_id = f.film_id
GROUP BY
    c.category_id,
    c.name
ORDER BY
    avg_film_length DESC;

-- 6. Top 10 most frequently rented movies (bonus)
SELECT
    f.title,
    COUNT(r.rental_id) AS rental_count
FROM film AS f
JOIN inventory AS i
    ON f.film_id = i.film_id
JOIN rental AS r
    ON i.inventory_id = r.inventory_id
GROUP BY
    f.film_id,
    f.title
ORDER BY
    rental_count DESC,
    f.title
LIMIT 10;

-- 7. Can "Academy Dinosaur" be rented from Store 1? (bonus)
SELECT
    f.title,
    i.inventory_id,
    i.store_id
FROM film AS f
JOIN inventory AS i
    ON f.film_id = i.film_id
WHERE
    f.title = 'Academy Dinosaur'
    AND i.store_id = 1;

-- 8. List all distinct film titles and availability status (bonus)
SELECT
    f.title,
    CASE 
        WHEN IFNULL(inv.inv_count, 0) > 0 THEN 'Available'
        ELSE 'NOT available'
    END AS availability_status
FROM film AS f
LEFT JOIN (
    SELECT 
        i.film_id,
        COUNT(i.inventory_id) AS inv_count
    FROM inventory AS i
    GROUP BY 
        i.film_id
) AS inv
    ON f.film_id = inv.film_id
ORDER BY
    f.title;







    
    
